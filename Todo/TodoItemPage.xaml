<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="Todo.TodoItemPage"
Title="{Binding Name}">
    <StackLayout Margin="20"
 VerticalOptions="StartAndExpand">
        <Label Text="Name"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Entry Text="{Binding Name}"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Label Text="Notes"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Entry Text="{Binding Notes}"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Label Text="Done" />
        <Switch IsToggled="{Binding Done}" />
        <Button Text="Save"
 Clicked="OnSaveClicked"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Button Text="Delete"
 Clicked="OnDeleteClicked"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Button Text="Cancel"
 Clicked="OnCancelClicked"
 FontSize="20"
 FontAttributes="Bold"
 TextColor="Black"/>
        <Label Text="Фонина Евгения БИ10"
              FontSize="20"
              FontAttributes="Italic"
              TextColor="Blue"/>
    </StackLayout>
</ContentPage>